<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark">

    <include
        android:id="@+id/toolbar"
        layout="@layout/view_toolbar" />

    <com.mukesh.OtpView
        android:id="@+id/otp_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:inputType="numberPassword"
        android:itemBackground="@color/colorBackground"
        android:textColor="@android:color/background_dark"
        app:itemCount="6"
        app:viewType="line" />

    <Button
        android:id="@+id/btnConfirm"
        style="@style/ButtonApp.Accent"
        android:layout_width="@dimen/base200"
        android:layout_height="wrap_content"
        android:layout_below="@id/otp_view"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/base10"
        android:layout_marginTop="@dimen/padding_normal"
        android:layout_marginEnd="@dimen/base10"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center"
        android:text="@string/xac_nhan"
        android:textAllCaps="false" />

</RelativeLayout>