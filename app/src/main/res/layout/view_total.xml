<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvTitle"
        style="@style/TextViewApp.SubHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:drawablePadding="@dimen/padding_normal"
        android:padding="@dimen/padding_normal"
        android:text="@string/so_luong" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/base10"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginRight="@dimen/base10">

        <ImageView
            android:id="@+id/imvDis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/padding_normal"
            app:srcCompat="@drawable/ic_do_not_disturb_on_black_24dp" />

        <TextView
            android:id="@+id/tvNumber"
            style="@style/TextViewApp.SubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_normal"
            android:text="0" />

        <ImageView
            android:id="@+id/imvSum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:padding="@dimen/padding_normal"
            app:srcCompat="@drawable/ic_add_circle_black_24dp" />
    </LinearLayout>
</RelativeLayout>